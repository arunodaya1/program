#include <iostream>
using namespace std;

int main() {
    try{
        int num1;
           cout<<"enter the first number"<<num1<<endl;
    cin>>num1;
    
int num2;
    cout<<"enter the second number"<<num2<<endl;
     cin>>num2;
    if(num2==0){
        throw 0;
    }
    cout<<"result"<<num1/num2;
}  
catch (int) {
    cout<<"divided by zero!";
} 
    return 0;
}
